# Database Configuration
DATABASE_URL=postgresql://user:password@localhost:5432/advtom

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_REGION=us-east-1
S3_BUCKET_NAME=your-s3-bucket-name

# SMTP Configuration (for email sending)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM=Your App Name <your-email@gmail.com>

# API URLs
API_URL=https://api.yourdomain.com
FRONTEND_URL=https://app.yourdomain.com

# DataJud CNJ API (Brazilian Court System)
DATAJUD_API_KEY=your-datajud-api-key

# Server Configuration
PORT=3000
NODE_ENV=production

# Telegram Bot Padrão (fallback para empresas sem bot próprio)
TELEGRAM_DEFAULT_BOT_TOKEN=
TELEGRAM_DEFAULT_BOT_USERNAME=
