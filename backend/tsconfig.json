{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": ["ES2020"],
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist", "src/controllers/client-subscription.controller.ts", "src/controllers/stripe-config.controller.ts", "src/controllers/stripe-webhook.controller.ts", "src/routes/client-subscription.routes.ts", "src/routes/stripe-config.routes.ts", "src/routes/stripe-webhook.routes.ts"]
}
